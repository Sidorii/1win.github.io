{
  "name": "1Win Brasil",               // The name of your PWA
  "short_name": "1Win Br",            // A shorter name for your PWA
  "description": "!Win official app",  // A brief description
  "start_url": "/index.html",         // The URL to load when the app is launched
  "display": "fullscreen",            // Display mode ("standalone," "fullscreen," "minimal-ui," or "browser")
  "background_color": "#0A2C5D",     // Background color of the splash screen
  "theme_color": "#0077FF",          // Theme color for the app
  "orientation": "portrait",              // Allowed orientation ("any," "natural," "landscape," "portrait," etc.)
  "icons": [
    {
      "src": "/images/1win-192.png",   // Icon for app (192x192 pixels)
      "sizes": "192x192",
      "type": "image/png"
    },
    {
      "src": "/images/1win-512.png",   // Icon for app (512x512 pixels)
      "sizes": "512x512",
      "type": "image/png"
    }
  ],
  "related_applications": [],
  "prefer_related_applications": false,
  "permissions": [
    "geolocation",
    "notifications"
  ],
  "serviceworker": {
    "src": "/service-worker.js"       // Path to your service worker script
  }
}
